    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-native": "^0.73.0",
    "@types/react-test-renderer": "^18.0.7",
    "jest": "^29.2.1",
    "jest-dom": "^4.0.0",
    "jest-expo": "~51.0.1",
    "jest-fetch-mock": "^3.0.3",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
